<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#5990e2</item>
    </style>

    <style name="questonstyle">

        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">6dp</item>

    </style>

    <style name="answerstyle">

        <item name="android:textColor">#797979</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="edittextstyle">

        <item name="android:textColor">#797979</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:inputType">textCapSentences</item>

    </style>

    <style name="resultstyle">

        <item name="android:textColor">#919191</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
